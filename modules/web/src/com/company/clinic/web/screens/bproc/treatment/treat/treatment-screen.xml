<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://schemas.haulmont.com/cuba/screen/window.xsd"
        caption="msg://treatmentScreen.caption"
        messagesPack="com.company.clinic.web.screens.bproc.treatment.treat">
    <layout>
        <form id="teatmentForm">
            <column width="400px">
                <textArea id="description" caption="msg://description" editable="false"/>
                <textArea id="comment" caption="msg://comment"/>
            </column>
        </form>
        <hbox margin="true">
            <buttonsPanel>
                <button id="completeBtn" caption="msg://complete" icon="CHECK"/>
                <button id="needInfoBtn" caption="msg://need.info" icon="QUESTION"/>
            </buttonsPanel>
        </hbox>
    </layout>
</window>